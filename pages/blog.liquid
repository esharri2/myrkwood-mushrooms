---
title: Blog
pagination:
  data: collections.post
  size: 2
  alias: posts
---
<div
    class="container">
    <h1>{{title}}
    </h1>
    <ul>
        {% for post in posts %}
            <li
                class="pt-4">
                <a
                    class="text-xl"
                    href="{{post.url}}">{{post.data.title}}
                </a>
                <p>{% prettyDate post.data.date %}
                    |
                    {{post.data.description}}
                </p>
            </li>
        {% endfor %}
    </ul>
    {% render 'pagination', pagination: pagination %}
</div> 