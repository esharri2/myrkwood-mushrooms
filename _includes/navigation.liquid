<nav>
    <ul
        class="flex font-display uppercase sm:text-xl">
        {% for item in navigation %}
            {% if page.filePathStem == item.key %}
                {% assign activeClasses = 'underline'%}
                {% assign currentAttribute = 'aria-current="page"' %}
            {% else %}
                {% assign activeClasses = null %}
                {% assign currentAttribute = null %}
            {% endif %}
            <li
                class="px-2 py-2 first:pl-0 last:pr-0 text-center {{activeClasses}}"
                {{currentAttribute}}>
                <a
                    href="{{item.key}}">{{item.title}}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>
